/* 上层登录 */
.all{
  width: 100%;
  height: 700rpx;
  margin: 0;
  padding: 0;
  background-color: #fff;
  background-color: rgb(238, 238, 238);
}
.top-ball{
  width: 300rpx;
  height: 300rpx;
  position: absolute;
  left: 50%;
  top: 20%;
  transform: translate(-50%,-50%);
  /* background-color: aqua; */
  box-shadow:0 0 5rpx aqua,
            0 0 7rpx aqua,
            0 0 15rpx aqua;
  border-radius: 10rpx;
  background-image: linear-gradient(to left,aqua ,transparent);
}


 
.T-image{
  border-radius: 10rpx;
  width: 300rxp;
  height: 300rpx;
}
